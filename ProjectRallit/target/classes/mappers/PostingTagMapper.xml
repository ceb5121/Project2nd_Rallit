<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.human.dao.PostingTagDao">
<insert id="insert">
insert into PostingTag
values(jobposting_seq.currval ,#{languageTag})
</insert>

<select id="select" resultType="com.human.dto.PostingTagDto"><!-- 글번호에 해당하는 태그 -->
select * from PostingTag where textNumber=#{textNumber}
</select>

<delete id="delete"> <!-- 채용공고 삭제시 해당 글번호에 해당하는 태그 전체 삭제 -->
delete from PostingTag where textNumber=#{textNumber}
</delete>

<delete id="deleteTag"> <!-- 태그 개별 삭제 -->
delete from PostingTag where textNumber=#{textNumber} and languageTag=#{languageTag}
</delete>

<update id="update"> <!-- 태그 변경(여러 개 수정 시 각각 실행 필요) -->
update PostingTag set languageTag=#{modifyTag}
 where textNumber=#{textNumber} and languageTag=#{languageTag}
</update>



</mapper>









